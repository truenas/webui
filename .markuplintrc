{
  "parser": {
    ".html$": "markuplint-angular-parser"
  },
  "rules": {
    "attr-equal-space-after": "never",
    "attr-equal-space-before": "never",
    "indentation": {
      "value": 2,
      "severity": "error"
    },
    "disallowed-element": ["mat-icon"]
  },
  "excludeFiles": [
    "./src/index.html"
  ]
}
